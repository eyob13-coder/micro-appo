// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  name          String
  email         String
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  sessions      Session[]
  accounts      Account[]
  interactions  UserInteraction[]
  sourceMaterials SourceMaterial[]
  studyPlans    StudyPlan[]
  
  isPro            Boolean   @default(false)
  uploadCount      Int       @default(0)
  stripeCustomerId String?

  @@unique([email])
  @@map("user")
}

model Lesson {
  id            String   @id @default(cuid())
  sourceMaterialId String?
  type          String   // 'summary', 'mcq', 'video'
  content       String   @db.Text
  videoUrl      String?
  options       String[]
  correctAnswer Int?
  explanation   String?  @db.Text
  chunkIndex    Int      @default(0)
  sequence      Int      @default(0)
  createdAt     DateTime @default(now())
  
  interactions  UserInteraction[]
  sourceMaterial SourceMaterial? @relation(fields: [sourceMaterialId], references: [id], onDelete: Cascade)

  @@index([sourceMaterialId, sequence])
  
  @@map("lesson")
}

model UserInteraction {
  id        String   @id @default(cuid())
  userId    String
  lessonId  String
  type      String   // 'like', 'save'
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId, type])
  @@map("user_interaction")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime

  @@map("account")
}

model Verification {
  id         String    @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime?
  updatedAt  DateTime?

  @@map("verification")
}

model SourceMaterial {
  id        String   @id @default(cuid())
  userId    String?
  content   String   @db.Text
  createdAt DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  lessons   Lesson[]
  
  @@index([userId, createdAt])
  
  @@map("source_material")
}

model StudyPlan {
  id                   String         @id @default(cuid())
  userId               String
  title                String
  timezone             String
  weeklyTargetMinutes  Int            @default(420)
  focusDays            String[]
  startDate            DateTime       @default(now())
  endDate              DateTime?
  status               String         @default("active")
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  user                 User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks                StudyTask[]
  sessions             StudySession[]

  @@index([userId, status, createdAt])
  @@map("study_plan")
}

model StudyTask {
  id               String        @id @default(cuid())
  planId           String
  title            String
  topic            String?
  notes            String?       @db.Text
  estimatedMinutes Int?
  dueDate          DateTime?
  priority         Int           @default(2)
  status           String        @default("backlog")
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  completedAt      DateTime?

  plan             StudyPlan     @relation(fields: [planId], references: [id], onDelete: Cascade)
  sessions         StudySession[]

  @@index([planId, status])
  @@index([planId, dueDate])
  @@map("study_task")
}

model StudySession {
  id               String    @id @default(cuid())
  planId           String
  taskId           String?
  title            String
  topic            String?
  startAt          DateTime
  endAt            DateTime
  durationMinutes  Int
  status           String    @default("scheduled")
  energy           String?
  notes            String?   @db.Text
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  completedAt      DateTime?

  plan             StudyPlan @relation(fields: [planId], references: [id], onDelete: Cascade)
  task             StudyTask? @relation(fields: [taskId], references: [id], onDelete: SetNull)

  @@index([planId, startAt])
  @@index([taskId])
  @@map("study_session")
}
